<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/dynamic_list_graph"
    app:moduleName="dynamicfeature1"
    app:startDestination="@id/feature">

    <fragment
            android:id="@+id/feature"
            android:name="com.example.android.navigationadvancedsample.dynamicfeature1.FeatureFragment"
            android:label="feature"
            tools:layout="@layout/fragment_feature">
        <action
            android:id="@+id/action_feature_to_feature_next"
            app:destination="@id/feature_next"/>
    </fragment>
    <fragment
        android:id="@+id/feature_next"
        android:name="com.example.android.navigationadvancedsample.dynamicfeature1.FeatureNextFragment"
        android:label="FeatureNext"
        tools:layout="@layout/fragment_feature_next">
        <action
            android:id="@+id/action_feature_next_to_person_list"
            app:destination="@id/list"/>

    </fragment>

    <include-dynamic
        android:id="@id/list"
        app:graphPackage="com.example.android.navigationadvancedsample.PersonFeature"
        app:graphResName="list"
        app:moduleName="PersonFeature"/>

</navigation>
